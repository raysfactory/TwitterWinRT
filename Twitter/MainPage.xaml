<Page x:Class="Twitter.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Twitter"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Click="AuthenticationButton_Click_1" Content="Connect" />
            <Button Click="AuthenticationButton_Click_2" Content="Post" />
            <Button Click="AuthenticationButton_Click_3" Content="Get Timeline" />
            <Button Click="AuthenticationButton_Click_4" Content="Get Profil" />
        </StackPanel>
    </Grid>
</Page>
